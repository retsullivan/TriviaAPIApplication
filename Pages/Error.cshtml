@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}
    <head>
        <style>
            .black-background {
                display: flex;
                flex-direction: row;
                justify-content: center;
                align-items: center;
                width: 100%;
                height: 100%;
                padding: 2vw;
                margin: 0%;
                background-color: rgb(48, 48, 54);
            }

            .blue-panel {
                display: flex;
                flex-direction: column;
                color: white;
                height: 70vh;
                width: 50vw;
                font-size: 10vw;
                font-weight: bolder;
                align-content: center;
                justify-content: center;
                text-align: center;
                text-justify: auto;
                padding: 2vh;
                border-radius: 1vh;
                box-shadow: 0px 3px 1px 1px rgba(0, 0, 0,.1);
                background-color: rgba(45, 86, 210,.9);
            }
        </style>
    </head>

    <body>
       
        <div clase="black-background">
            <div class="blue-panel">
                <h1 class='display-2'>
                    I'm sorry, that response was not in the form of a question.
                </h1>
            </div>
        </div>
        @if (Model.ShowRequestId)
        {
            <p>
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }
    </body>
